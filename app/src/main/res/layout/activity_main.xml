<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <com.main.drawtest.CustomImageView
            android:id="@+id/iv_photo"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </com.main.drawtest.CustomImageView>

        <RelativeLayout
            android:id="@+id/rl_point_info"
            android:layout_alignParentRight="true"
            android:background="#90000000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/tv_title"
                android:text="标注点列表"
                android:background="#90000000"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="wrap_content">
            </TextView>

            <ListView
                android:id="@+id/lv_points"
                android:background="#90000000"
                android:layout_marginTop="2dp"
                android:layout_below="@id/tv_title"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                >
            </ListView>
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_tools_bar"
        android:background="#CCCCCC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_import"
            android:layout_marginTop="2dp"
            android:text="导入"
            android:background="#547D1B"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_width="60dp"
            android:layout_height="40dp">
        </Button>

        <Button
            android:id="@+id/btn_mark"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/btn_import"
            android:layout_marginLeft="5dp"
            android:text="开始标注"
            android:background="#547D1B"
            android:layout_centerVertical="true"
            android:layout_width="70dp"
            android:layout_height="40dp">
        </Button>

        <Button
            android:id="@+id/btn_click1"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/btn_mark"
            android:layout_marginLeft="5dp"
            android:text="点击1"
            android:background="#547D1B"
            android:layout_centerVertical="true"
            android:layout_width="70dp"
            android:layout_height="40dp">
        </Button>

        <Button
            android:id="@+id/btn_click2"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/btn_click1"
            android:layout_marginLeft="5dp"
            android:text="点击2"
            android:background="#547D1B"
            android:layout_centerVertical="true"
            android:layout_width="70dp"
            android:layout_height="40dp">
        </Button>

        <CheckBox
            android:id="@+id/cb_scale"
            android:layout_toRightOf="@id/btn_click2"
            android:layout_centerVertical="true"
            android:text="缩放"
            android:checked="true"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </CheckBox>

        <CheckBox
            android:id="@+id/cb_translate"
            android:layout_toRightOf="@id/cb_scale"
            android:layout_centerVertical="true"
            android:text="移动"
            android:checked="true"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </CheckBox>

        <EditText
            android:id="@+id/et_trans_x"
            android:layout_toRightOf="@id/cb_translate"
            android:textColor="@color/black"
            android:layout_width="50dp"
            android:text="100"
            android:layout_height="wrap_content">

        </EditText>

        <EditText
            android:id="@+id/et_trans_y"
            android:layout_toRightOf="@id/et_trans_x"
            android:text="100"
            android:textColor="@color/black"
            android:layout_width="50dp"
            android:layout_height="wrap_content">

        </EditText>
        <EditText
            android:id="@+id/et_scale"
            android:layout_toRightOf="@id/et_trans_y"
            android:textColor="@color/black"
            android:text="1.5"
            android:layout_width="50dp"
            android:layout_height="wrap_content">

        </EditText>
    </RelativeLayout>

</LinearLayout>